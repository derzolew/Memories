<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_memory_solved_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/list_item_memory_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_item_memory_solved_check_box"
        android:padding="4dp"
        android:text="@string/memory_title"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/list_item_memory_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_memory_title_text_view"
        android:padding="4dp"
        android:text="@string/memory_date"
        />

    <ImageView
        android:id="@+id/list_item_memory_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/list_item_memory_title_text_view"/>

</RelativeLayout>